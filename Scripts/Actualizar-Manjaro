#!/bin/bash
speedtest
sudo mount -o remount,size=2G,noatime /tmp
sudo pacman -Syyu
yaourt -Syyyua
sudo update-grub
sudo fc-cache -f -v
sudo gtk-update-icon-cache
screenfetch
