sleep 1s
if [ "$(id -u)" -eq 0 ] ; then

	echo "ERROR: No ejecute este Script en una sesiòn Root, porque Makepkg no compilarà paquetes desde AUR"

	echo " Simplemente ejecutelo desde su usuario Regular  "

	echo " Este Script usarà sudo cuando sea necesario. Saliendo."

	exit 1

fi
#!/bin/bash
speedtest
sudo mount -o remount,size=2G,noatime /tmp
sudo pacman -Syyu
yaourt -Syyyua
sudo update-grub
sudo fc-cache -f -v
sudo gtk-update-icon-cache
screenfetch
