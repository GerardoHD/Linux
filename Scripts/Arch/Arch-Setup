#
echo Configuraciones varias
#
echo Modificando valor Swappiness
echo >> 99-sysctl.conf
sudo sed -i '$ a\vm.swappiness=40' 99-sysctl.conf
sudo sed -i '$ a\vm.vfs_cache_pressure=50' 99-sysctl.conf
sudo mv  99-sysctl.conf /etc/sysctl.d/99-sysctl.conf
#
echo Cambiando configuraciòn de UDisks2
sudo sed -i 's/auth_admin_keep/yes/g' /usr/share/polkit-1/actions/org.freedesktop.UDisks2.policy
#
echo Configurando SystemD para ignorar la tapa del portatil
sudo sed -i 's/#HandleLidSwitch=suspend/HandleLidSwitch=ignore/g' /etc/systemd/logind.conf
sudo sed -i 's/#HandleLidSwitchDocked=suspend/HandleLidSwitchDocked=ignore/g' /etc/systemd/logind.conf
#
echo  Mejorando la-capitaine-icon-theme
sudo sed -i 's|Inherits=breeze,elementary,gnome,deepin|Inherits=Papirus,breeze,elementary,gnome,deepin|g' /usr/share/icons/la-capitaine-icon-theme/index.theme
#
echo Arreglando Menulibre
sudo sed -i 's|return GLib.markup_escape_text(text, len(text))|return GLib.markup_escape_text(text)|g' /usr/lib/python3.7/site-packages/menulibre/util.py
#
echo	---=Configurando Bootloader=---
PS3='Elige el bootloader a configurar: '
options=("Systemd-boot" "GRUB" "Systemd-boot + Plymouth" "GRUB + Plymouth" "Salir")
select opt in "${options[@]}"
do
    case $opt in
        "Systemd-boot")
           echo "Escogiste Configurar Systemd-boot"
	   #
	   echo Configurando loader Systemd-boot
	   sudo sed -i 's/rw/quiet loglevel=1 vga=current rd.systemd.show_status=auto rd.udev.log_priority=3/g' /boot/loader/entries/Arch.conf
	   #
	   echo Creando Hook de Pacman para systemd-boot
	   echo >> 100-systemd-boot.hook
	   sed -i '$ a\[Trigger]' 100-systemd-boot.hook
	   sed -i '$ a\Type = Package' 100-systemd-boot.hook
	   sed -i '$ a\Operation = Upgrade' 100-systemd-boot.hook
	   sed -i '$ a\Target = systemd' 100-systemd-boot.hook
	   sed -i '$ a\ ' 100-systemd-boot.hook
	   sed -i '$ a\[Action]' 100-systemd-boot.hook
	   sed -i '$ a\Description = Updating systemd-boot' 100-systemd-boot.hook
	   sed -i '$ a\When = PostTransaction' 100-systemd-boot.hook
	   sed -i '$ a\Exec = /usr/bin/bootctl update' 100-systemd-boot.hook
	   sudo mv 100-systemd-boot.hook /usr/share/libalpm/hooks/100-systemd-boot.hook
	   #
	   echo configurando Silent boot, desactivando varias alertas del sistema
	   sudo sed -i 's/HOOKS=(base udev autodetect modconf block filesystems keyboard fsck)/HOOKS=(systemd autodetect modconf sd-vconsole block filesystems keyboard)/g' /etc/mkinitcpio.conf
	   sudo cp /usr/lib/systemd/system/systemd-fsck-root.service /etc/systemd/system/systemd-fsck-root.service
	   sudo echo StandardOutput=null >> /etc/systemd/system/systemd-fsck-root.service
	   sudo echo StandardError=journal+console >> /etc/systemd/system/systemd-fsck-root.service
	   sudo cp /usr/lib/systemd/system/systemd-fsck@.service /etc/systemd/system/systemd-fsck@.service
	   sudo echo StandardOutput=null >> /etc/systemd/system/systemd-fsck@.service
	   sudo echo StandardError=journal+console >> /etc/systemd/system/systemd-fsck@.service
	   sudo mkinitcpio -p linux
	   sudo bootctl update
           break
           ;;
        "GRUB")
           echo "Escogiste Configurar GRUB"
	   sudo pacman -S os-prober
	   trizen -S arch-silence-grub-theme
	   #
	   sudo sed -i 's/GRUB_DEFAULT=0/GRUB_DEFAULT=saved/g' /etc/default/grub
	   sudo sed -i 's/GRUB_TIMEOUT=5/GRUB_TIMEOUT=2/g' /etc/default/grub
	   sudo sed -i 's|#GRUB_THEME="/path/to/gfxtheme"|GRUB_THEME=/boot/grub/themes/arch-silence/theme.txt|g' /etc/default/grub
	   sudo sed -i 's/#GRUB_SAVEDEFAULT="true"/GRUB_SAVEDEFAULT="true"/g' /etc/default/grub
	   sudo sed -i 's/GRUB_CMDLINE_LINUX_DEFAULT="quiet"/GRUB_CMDLINE_LINUX_DEFAULT="quiet loglevel=1 vga=current rd.systemd.show_status=auto rd.udev.log_priority=3"/g' /etc/default/grub
	   #
	   echo configurando Silent boot, desactivando varias alertas del sistema
	   sudo sed -i 's/HOOKS=(base udev autodetect modconf block filesystems keyboard fsck)/HOOKS=(systemd autodetect modconf sd-vconsole block filesystems keyboard)/g' /etc/mkinitcpio.conf
	   sudo cp /usr/lib/systemd/system/systemd-fsck-root.service /etc/systemd/system/systemd-fsck-root.service
	   sudo echo StandardOutput=null >> /etc/systemd/system/systemd-fsck-root.service
	   sudo echo StandardError=journal+console >> /etc/systemd/system/systemd-fsck-root.service
	   sudo cp /usr/lib/systemd/system/systemd-fsck@.service /etc/systemd/system/systemd-fsck@.service
	   sudo echo StandardOutput=null >> /etc/systemd/system/systemd-fsck@.service
	   sudo echo StandardError=journal+console >> /etc/systemd/system/systemd-fsck@.service
	   sudo mkinitcpio -p linux
	   sudo os-prober
	   sudo grub-mkconfig -o /boot/grub/grub.cfg
           break
           ;;
        "Systemd-boot + Plymouth")
           echo "Escogiste configurar Systemd-boot + Plymouth"
	   #
	   sudo pacman -S linux-headers dkms
	   trizen -S plymouth-git plymouth-theme-arch-beat plymouth-theme-arch-charge-big
	   #
	   echo Creando Hook de Pacman para systemd-boot
	   echo >> 100-systemd-boot.hook
	   sed -i '$ a\[Trigger]' 100-systemd-boot.hook
	   sed -i '$ a\Type = Package' 100-systemd-boot.hook
	   sed -i '$ a\Operation = Upgrade' 100-systemd-boot.hook
	   sed -i '$ a\Target = systemd' 100-systemd-boot.hook
	   sed -i '$ a\ ' 100-systemd-boot.hook
	   sed -i '$ a\[Action]' 100-systemd-boot.hook
	   sed -i '$ a\Description = Updating systemd-boot' 100-systemd-boot.hook
	   sed -i '$ a\When = PostTransaction' 100-systemd-boot.hook
	   sed -i '$ a\Exec = /usr/bin/bootctl update' 100-systemd-boot.hook
	   sudo mv 100-systemd-boot.hook /usr/share/libalpm/hooks/100-systemd-boot.hook
	   #
	   echo Configurando loader Systemd-boot
	   sudo sed -i 's/rw/quiet splash loglevel=1 vga=current rd.systemd.show_status=auto rd.udev.log_priority=3  vt.global_cursor_default=0/g' /boot/loader/entries/Arch.conf
	   #
	   echo configurando Silent boot, desactivando varias alertas del sistema, activando Plymouth
	   sudo sed -i 's/HOOKS=(base udev autodetect modconf block filesystems keyboard fsck)/HOOKS=(systemd plymouth autodetect modconf sd-vconsole block filesystems keyboard)/g' /etc/mkinitcpio.conf
	   sudo cp /usr/lib/systemd/system/systemd-fsck-root.service /etc/systemd/system/systemd-fsck-root.service
	   sudo echo StandardOutput=null >> /etc/systemd/system/systemd-fsck-root.service
	   sudo echo StandardError=journal+console >> /etc/systemd/system/systemd-fsck-root.service
	   sudo cp /usr/lib/systemd/system/systemd-fsck@.service /etc/systemd/system/systemd-fsck@.service
	   sudo echo StandardOutput=null >> /etc/systemd/system/systemd-fsck@.service
	   sudo echo StandardError=journal+console >> /etc/systemd/system/systemd-fsck@.service
	   #
   	   sudo plymouth-set-default-theme -R arch-beat
	   sudo mkinitcpio -p linux
	   sudo bootctl update
           break
           ;;
        "GRUB + Plymouth")
	   #
	   sudo pacman -S os-prober linux-headers dkms
	   trizen -S plymouth-git plymouth-theme-arch-beat plymouth-theme-arch-charge-big arch-silence-grub-theme
	   #
	   sudo sed -i 's/GRUB_DEFAULT=0/GRUB_DEFAULT=saved/g' /etc/default/grub
	   sudo sed -i 's/GRUB_TIMEOUT=5/GRUB_TIMEOUT=2/g' /etc/default/grub
	   sudo sed -i 's|#GRUB_THEME="/path/to/gfxtheme"|GRUB_THEME=/boot/grub/themes/arch-silence/theme.txt|g' /etc/default/grub
	   sudo sed -i 's/#GRUB_SAVEDEFAULT="true"/GRUB_SAVEDEFAULT="true"/g' /etc/default/grub
	   sudo sed -i 's/GRUB_CMDLINE_LINUX_DEFAULT="quiet"/GRUB_CMDLINE_LINUX_DEFAULT="quiet splash loglevel=1 vga=current rd.systemd.show_status=auto udev.log_priority=3 vt.global_cursor_default=0"/g' /etc/default/grub
	   #
	   echo configurando Silent boot, desactivando varias alertas del sistema, activando Plymouth
	   sudo sed -i 's/HOOKS=(base udev autodetect modconf block filesystems keyboard fsck)/HOOKS=(systemd plymouth autodetect modconf sd-vconsole block filesystems keyboard)/g' /etc/mkinitcpio.conf
	   sudo cp /usr/lib/systemd/system/systemd-fsck-root.service /etc/systemd/system/systemd-fsck-root.service
	   sudo echo StandardOutput=null >> /etc/systemd/system/systemd-fsck-root.service
	   sudo echo StandardError=journal+console >> /etc/systemd/system/systemd-fsck-root.service
	   sudo cp /usr/lib/systemd/system/systemd-fsck@.service /etc/systemd/system/systemd-fsck@.service
	   sudo echo StandardOutput=null >> /etc/systemd/system/systemd-fsck@.service
	   sudo echo StandardError=journal+console >> /etc/systemd/system/systemd-fsck@.service
	   sudo plymouth-set-default-theme -R arch-beat
	   sudo mkinitcpio -p linux
	   sudo os-prober
	   sudo grub-mkconfig -o /boot/grub/grub.cfg
           break
           ;;
	"Salir")
           break
           ;;
        *) echo invalid option;;
    esac
done
#
#echo Descargando Sudocabulary desde Github
#curl https://raw.githubusercontent.com/badarsh2/Sudocabulary/master/script.sh | bash
#
echo  -=Actualizando Arch Linux=-
trizen -Syyu
sudo fc-cache -f -v
sudo gtk-update-icon-cache
xdg-user-dirs-update
#
echo       ---=Activando Servicio Cups "cupsd"=---
sudo systemctl enable org.cups.cupsd.service
echo       ---=Activando Servicio Network Manager=---
sudo systemctl enable NetworkManager.service
echo       ---=Activando Servicio SSHD "sshd"=---
sudo systemctl enable sshd.service
sudo systemctl enable sshd.socket
#
sleep 2s
echo     ---=Instalando Entorno de Escritorio=---
PS3='Introduce tu elecciòn: '
options=("Arch-Cinnamon" "Arch-Deepin" "Arch-Gnome" "Arch-KDE" "Arch-Mate" "Arch-Xfce" "Salir")
select opt in "${options[@]}"
do
    case $opt in
	"Arch-Cinnamon")
           echo "Escogiste Instalar Cinnamon"
           echo     ---=Instalando Cinnamon=---
           sudo pacman -S cinnamon
           sleep 2s
           sudo pacman -S gnome-screenshot
           sudo pacman -S nemo-fileroller lightdm-gtk-greeter gnome-mplayer
           sudo pacman -S mate-calc gnome-system-monitor eom pluma
           sleep 2s
	   echo Instalando QT5CT para mejorar la integración de los programas QT en escritorios GTK 
           sudo pacman -S qt5-styleplugins qt5ct 
           sudo sed -i '$ a\QT_QPA_PLATFORMTHEME=qt5ct' /etc/environment
           #
           trizen -S cinnamon-sound-effects
           trizen -S macos-arc-white-theme
           #
           echo Cambiando distribución del teclado en LightDM
           echo >> 20-keyboard.conf
           sudo sed -i '$ a\Section "InputClass"' 20-keyboard.conf
           sudo sed -i '$ a\    Identifier "keyboard"' 20-kaeyboard.conf
           sudo sed -i '$ a\    MatchIsKeyboard "yes"' 20-keyboard.conf
           sudo sed -i '$ a\    Option "XkbLayout" "es"' 20-keyboard.conf
           sudo sed -i '$ a\    Option "XkbVariant" "nodeadkeys"' 20-keyboard.conf
           sudo sed -i '$ a\EndSection' 20-keyboard.conf
           sudo mv  20-keyboard.conf /etc/X11/xorg.conf.d/20-keyboard.conf
           #
           echo Cambiando greeter de LightDM a GTK-Greeter
           sudo sed -i 's/#greeter-session=lightdm-yourgreeter-greeter/greeter-session=lightdm-gtk-greeter/g' /etc/lightdm/lightdm.conf
           #
           echo       ---=Activando LightDM=---
           sudo systemctl enable lightdm.service
           #
           break
           ;;
	"Arch-Deepin")
           echo "Escogiste Instalar Deepin"
           echo     ---=Instalando Deepin=---
           sudo pacman -S deepin deepin-extra
           #
           echo Cambiando distribución del teclado en LightDM
           echo >> 20-keyboard.conf
           sudo sed -i '$ a\Section "InputClass"' 20-keyboard.conf
           sudo sed -i '$ a\    Identifier "keyboard"' 20-keyboard.conf
           sudo sed -i '$ a\    MatchIsKeyboard "yes"' 20-keyboard.conf
           sudo sed -i '$ a\    Option "XkbLayout" "es"' 20-keyboard.conf
           sudo sed -i '$ a\    Option "XkbVariant" "nodeadkeys"' 20-keyboard.conf
           sudo sed -i '$ a\EndSection' 20-keyboard.conf
           sudo mv  20-keyboard.conf /etc/X11/xorg.conf.d/20-keyboard.conf
           #
           echo Cambiando greeter de LightDM a Deepin
           sudo sed -i 's/#greeter-session=lightdm-yourgreeter-greeter/greeter-session=lightdm-deepin-greeter/g' /etc/lightdm/lightdm.conf
           #
           echo       ---=Activando LightDM=---
           sudo systemctl enable lightdm.service
           #
           break
           ;;
	"Arch-Gnome")
           echo "Escogiste Instalar Gnome"
           echo     ---=Instalando Gnome=---
           sleep 1s
	   sudo pacman -S baobab cheese eog epiphany evince file-roller gdm gedit gnome-backgrounds
	   sudo pacman -S gnome-calculator gnome-calendar gnome-characters gnome-clocks
	   sudo pacman -S gnome-color-manager gnome-contacts gnome-control-center gnome-disk-utility
	   sudo pacman -S gnome-font-viewer gnome-getting-started-docs gnome-keyring gnome-logs gnome-menus
	   sudo pacman -S gnome-photos gnome-remote-desktop gnome-screenshot gnome-session gnome-settings-daemon gnome-shell
	   sudo pacman -S gnome-shell-extensions gnome-system-monitor gnome-terminal gnome-themes-extra
	   sudo pacman -S gnome-user-docs gnome-user-share gnome-video-effects gnome-weather grilo-plugins
	   sudo pacman -S gvfs gvfs-afc gvfs-goa gvfs-google gvfs-gphoto2 gvfs-mtp gvfs-nfs gvfs-smb
	   sudo pacman -S mousetweaks mutter nautilus networkmanager orca rygel 
	   sudo pacman -S tracker tracker-miners vino xdg-user-dirs-gtk yelp gnome-software simple-scan
           sudo pacman -S dconf-editor gnome-code-assistance gnome-sound-recorder
	   sudo pacman -S gedit-code-assistance
           sudo pacman -S gnome-tweaks gnome-weather gnome-software-packagekit-plugin chrome-gnome-shell
           sleep 2s
           sudo pacman -S gnome-initial-setup eog-plugins gnome-video-effects libgnome-keyring
	   sudo pacman -S gnome-mpv
           echo Instalando QT5CT para mejorar la integración de los programas QT en escritorios GTK 
           sudo pacman -S qt5-styleplugins qt5ct 
           sudo sed -i '$ a\QT_QPA_PLATFORMTHEME=qt5ct' /etc/environment
           #
           sleep 2s
           trizen -S gnome-backgrounds-bitday-git gnome-mojave-timed-wallpaper
	   trizen -S libinput-gestures gnome-appfolders-manager
	   #
	   echo Activando libinput-gestures
	   libinput-gestures-setup autostart
	   echo Configurando el botón de Apagado para Gnome
           gsettings set org.gnome.settings-daemon.plugins.power power-button-action 'interactive'
	   #
	   sleep 2s
	   #
           echo       ---=Activando Gnome Display Manager "gdm"=---
           sudo systemctl enable gdm.service
           #
           break
           ;;
	"Arch-KDE")
           echo "Escogiste Instalar KDE"
           echo     ---=Instalando KDE=---
           sleep 1s
           sudo pacman -S plasma
           sudo pacman -S akonadi-calendar-tools akonadi-import-wizard akonadiconsole 
           sudo pacman -S ark okular
           sudo pacman -S dolphin dolphin-plugins dragon ffmpegthumbs filelight gwenview konsole
           sudo pacman -S kaccounts-integration kaccounts-providers kaddressbook kamoso kate kcalc kdegraphics-mobipocket
           sudo pacman -S kcharselect kcolorchooser kmail kdenetwork-filesharing kdialog kfind khelpcenter ktorrent
           sudo pacman -S plasma-wayland-session adapta-kde materia-kde arc-kde
	   sudo pacman -S redshift plasma5-applets-redshift-control
           sleep 2s
           sudo pacman -S kio-gdrive kdeconnect
           sudo pacman -S partitionmanager plasma-browser-integration
           sleep 2s
           trizen -S pamac-tray-appindicator archlinux-themes-sddm
           trizen -S systemd-kcm
           # 
           echo Ajustando Mapa de Teclas para sddm
           sudo sed -i '$ a\setxkbmap es' /usr/share/sddm/scripts/Xsetup
           #
           echo       ---=Activando Simple Desktop Display Manager "sddm"=---
           sudo systemctl enable sddm.service
           #
           break
           ;;
	"Arch-Mate")
           echo "Escogiste Instalar Mate"
           echo     ---=Instalando Mate=---
           sudo pacman -S mate mate-extra
           sleep 2s
           sudo pacman -S mate-netbook mate-applet-streamer 
           sudo pacman -S lightdm-gtk-greeter gnome-mplayer
           sleep 2s
	   echo Instalando QT5CT para mejorar la integración de los programas QT en escritorios GTK 
           sudo pacman -S qt5-styleplugins qt5ct 
           sudo sed -i '$ a\QT_QPA_PLATFORMTHEME=qt5ct' /etc/environment
           #
           trizen -S mate-applet-lockkeys
           #
           echo Cambiando distribución del teclado en LightDM
           echo >> 20-keyboard.conf
           sudo sed -i '$ a\Section "InputClass"' 20-keyboard.conf
           sudo sed -i '$ a\    Identifier "keyboard"' 20-keyboard.conf
           sudo sed -i '$ a\    MatchIsKeyboard "yes"' 20-keyboard.conf
           sudo sed -i '$ a\    Option "XkbLayout" "es"' 20-keyboard.conf
           sudo sed -i '$ a\    Option "XkbVariant" "nodeadkeys"' 20-keyboard.conf
           sudo sed -i '$ a\EndSection' 20-keyboard.conf
           sudo mv  20-keyboard.conf /etc/X11/xorg.conf.d/20-keyboard.conf
           #
           echo Cambiando greeter de LightDM a GTK-Greeter
           sudo sed -i 's/#greeter-session=lightdm-yourgreeter-greeter/greeter-session=lightdm-gtk-greeter/g' /etc/lightdm/lightdm.conf
           #
           echo       ---=Activando LightDM=---
           sudo systemctl enable lightdm.service
           #
           break
           ;;
	"Arch-Xfce")
           echo "Escogiste Instalar Xfce"
           echo     ---=Instalando Xfce=---
           sudo pacman -S xfce4
           sudo pacman -S thunar-archive-plugin thunar-media-tags-plugin xfce4-artwork
           sudo pacman -S xfce4-battery-plugin xfce4-datetime-plugin xfce4-diskperf-plugin
           sudo pacman -S xfce4-fsguard-plugin xfce4-mount-plugin xfce4-netload-plugin
           sudo pacman -S xfce4-notifyd xfce4-pulseaudio-plugin xfce4-taskmanager
           sudo pacman -S xfce4-verve-plugin xfce4-weather-plugin ristretto xfce4-whiskermenu-plugin
           sleep 2s
           sudo pacman -S network-manager-applet galculator gnome-font-viewer gnome-mpv
           sudo pacman -S file-roller baobab cheese gnome-video-effects gnome-screenshot
           sudo pacman -S pavucontrol zenity light-locker gnome-backgrounds redshift
           sudo pacman -S light-locker lightdm-gtk-greeter lightdm-gtk-greeter-settings gnome-screensaver 
           sleep 2s
	   echo Instalando QT5CT para mejorar la integración de los programas QT en escritorios GTK 
           sudo pacman -S qt5-styleplugins qt5ct 
           sudo sed -i '$ a\QT_QPA_PLATFORMTHEME=qt5ct' /etc/environment
           #
           #trizen -S redshift-gtk-git 
	   trizen -S mugshot indicator-keylock archlinux-themes-balou
           trizen -S xfce4-windowck-plugin
           #
           echo -=KDE Connect=-
           trizen -S indicator-kdeconnect kde-cli-tools
           #
           echo Cambiando distribución del teclado en LightDM
           echo >> 20-keyboard.conf
           sudo sed -i '$ a\Section "InputClass"' 20-keyboard.conf
           sudo sed -i '$ a\    Identifier "keyboard"' 20-keyboard.conf
           sudo sed -i '$ a\    MatchIsKeyboard "yes"' 20-keyboard.conf
           sudo sed -i '$ a\    Option "XkbLayout" "es"' 20-keyboard.conf
           sudo sed -i '$ a\    Option "XkbVariant" "nodeadkeys"' 20-keyboard.conf
           sudo sed -i '$ a\EndSection' 20-keyboard.conf
           sudo mv  20-keyboard.conf /etc/X11/xorg.conf.d/20-keyboard.conf
           #
           echo Cambiando greeter de LightDM a GTK-Greeter
           sudo sed -i 's/#greeter-session=lightdm-yourgreeter-greeter/greeter-session=lightdm-gtk-greeter/g' /etc/lightdm/lightdm.conf
           #
           echo       ---=Activando LightDM=---
           sudo systemctl enable lightdm.service
           #
           break
           ;;
	"Salir")
           break
           ;;
	*) echo invalid option;;
    esac
done
#
echo  -=Actualizando Arch Linux=-
trizen -Syyu
sudo fc-cache -f -v
sudo gtk-update-icon-cache
xdg-user-dirs-update
#
#
echo       ---=Limpiando Arch Linux=--
sleep 1s
sudo pacman -Sc
trizen -Sc
clear
screenfetch
df -h
date
echo ---=[El nuevo Sistema basado en Arch Linux está listo]=---
#
