git clone https://aur.archlinux.org/trizen.git
cd trizen && makepkg -si --noconfirm
cd ..
#
git clone https://aur.archlinux.org/package-query.git
cd package-query && makepkg -si --noconfirm
cd ..
#
git clone https://aur.archlinux.org/yaourt.git
cd yaourt && makepkg -si --noconfirm
cd ..
#
rm -rf trizen package-query yaourt
#
echo -=Actualizando Arch Linux=-
trizen -Syyu
#
echo	---=Instalando Software desde Repositorios Oficiales=---
sudo pacman -S polkit bash-completion gpart
sudo pacman -S p7zip lrzip lzip minizip gst-libav atomicparsley unarj unace
sudo pacman -S libunrar unrar unarchiver zip cmus opusfile x264 elinks gparted
sudo pacman -S mtools mlocate ffmpegthumbnailer mailcap openssh sshfs
sudo pacman -S speedtest-cli cmatrix 
