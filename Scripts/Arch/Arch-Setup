echo	---=Instalando Software desde Arch User Repository=---
trizen -S otf-san-francisco otf-bitter ephifonts-no-helvetica
trizen -S capitaine-cursors la-capitaine-icon-theme-git
trizen -S nautilus-admin gradio pamac-aur arch-firefox-search
trizen -S google-chrome
