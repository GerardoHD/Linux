#Configurar Arch Linux con Gnome
echo          ------==Script Creado por GerardoHD==------
echo https://github.com/GerardoHD
echo Script creado para Arch Linux
echo Se distribuye con la esperanza de que sea útil, pero sin ninguna garantía
sleep 1s
if [ "$(id -u)" -eq 0 ] ; then
        echo " ADVERTENCIA: Makepkg no compilará paquetes desde AUR en una sesión Root "
        echo " Este Script usará sudo cuando sea necesario. Deteniendo. "
        echo " Simplemente ejecute este Script desde su usuario. "
        exit
fi
#
echo Probando conexión a Internet
ping -c 3 www.archlinux.org
#
echo  -=Actualizando Arch Linux=-
speedtest
sudo mount -o remount,size=2G,noatime /tmp
trizen -Syyua
#
echo     ---=Instalando Gnome=---
sleep 1s
sudo pacman -S gnome
sudo pacman -S dconf-editor gnome-code-assistance gnome-mines gnome-sound-recorder 
sudo pacman -S gnome-tweak-tool gnome-weather gedit-plugins gnome-software-packagekit-plugin
sleep 2s
sudo pacman -S archlinux-wallpaper
sudo pacman -S filemanager-actions budgie-desktop
sudo pacman -S gnome-initial-setup eog-plugins gparted gnome-video-effects
sleep 2s
trizen -S gnome-backgrounds-bitday-git chrome-gnome-shell-git
trizen -S gnome-mpv
#trizen -S pop-gtk-theme-git bing-wallpaper-git
#
echo       ---=Limpiando Arch Linux=--
sleep 1s
echo
#!/bin/bash
sudo pacman-optimize
sudo pacman -Sc
sudo yaourt -Sc
df -h
sleep 3s
#
echo       ---=Activando Gnome Display Manager "gdm"=---
sudo systemctl enable gdm.service
#
sleep 1s
echo Ejecuta el Script Elegido
ls /usr/local/bin/
sleep 5s
clear
screenfetch
#
