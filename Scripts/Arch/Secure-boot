#Usando PKI
echo -Firmando achivos-
sbsign --key ~/efi-keys/db_arch.key --cert ~/efi-keys/db_arch.pem --output /boot/vmlinuz-linux /boot/vmlinuz-linux
sbsign --key ~/efi-keys/db_arch.key --cert ~/efi-keys/db_arch.pem --output /boot/EFI/BOOT/BOOTX64.EFI /boot/EFI/BOOT/BOOTX64.EFI
