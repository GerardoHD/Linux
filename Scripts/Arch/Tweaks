#Automatizar instalaciòn de paquetes en mis scripts:
sudo sed -i 's/sudo pacman -S /sudo pacman -S --noconfirm /g' /usr/local/bin/Arch-Setup
sudo sed -i 's/yay -S /trizen -S --noconfirm /g' /usr/local/bin/Arch-Setup
