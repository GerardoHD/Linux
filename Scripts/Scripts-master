#!/bin/bash
speedtest
sudo apt update
sudo apt upgrade
sudo apt full-upgrade
sudo update-grub
sudo fc-cache -f -v
sudo gtk-update-icon-cache
screenfetch


#Backup-Gnome-Screensaver
sudo cp /usr/share/gnome-shell/gnome-shell-theme.gresource /usr/share/gnome-shell/gnome-shell-theme.gresource~


#Blue-Script
echo "Sigues vivo"
screenfetch


#ChromiumOS
echo          ------==Script Creado por GerardoHD==------
echo https://github.com/GerardoHD
echo       ---=Preparando Sistema de archivos=---
mount -o remount, rw /
mkdir /usr/lib/cromo
mkdir /opt/google/chrome/pepper
echo       ---=Descargando Scripts de GerardoHD=---
mkdir /usr
mkdir /usr/local
mkdir /usr/local/bin
cd /usr/local/bin/
sudo rm -rf screenfetch
sudo rm -rf Actualizar-Manjaro
sudo rm -rf Actualizar-Ubuntu
