sudo chmod +x screenfetch
sudo chmod +x Actualizar-Manjaro
sudo chmod +x Actualizar-Ubuntu
sudo chmod +x Backup-Gnome-Screensaver
sudo chmod +x Blue-Script
sudo chmod +x Configurar-Manjaro-Net
sudo chmod +x Configurar-Ubuntu
sudo chmod +x Descargar-Scripts
sudo chmod +x Flat-Plat-Screensaver
sudo chmod +x Limpiar-Manjaro
sudo chmod +x Limpiar-Ubuntu
sudo chmod +x Original-Gnome-Screensaver
sudo chmod +x Red-Script
sudo chmod +x Reparar-Pacman-db.lck
sudo chmod +x Reparar-var-Ubuntu
sudo chmod +x ROOT-A
sudo chmod +x STATE
cd /
sleep 1s
echo Ejecuta el Script Elegido
ls /usr/local/bin/
sleep 5s
clear
screenfetch
#


#Flat-Plat-Screensaver
sudo cp /usr/share/themes/Flat-Plat/gnome-shell/gnome-shell-theme.gresource /usr/share/gnome-shell
echo Reiniciar GNOME Shell presionando Alt+F2, escribir r


#Limpiar Manjaro
echo          ------==Script Creado por GerardoHD==------
echo       ---=Limpiando Manjaro Linux=--
sleep 1s
echo
#!/bin/bash
sudo pacman-optimize
sudo pacman -Sc
sudo yaourt -Sc
df -h
sleep 3s


#Limpiar Ubuntu
echo          ------==Script Creado por GerardoHD==------
echo       ---=Limpiando Ubuntu=---
sleep 1s
echo
#!/bin/bash
sudo apt clean
sudo apt autoclean
sudo apt autoremove
df -h
sleep 3s


#Original-Gnome-Screensaver
sudo mv -f /usr/share/gnome-shell/gnome-shell-theme.gresource~ /usr/share/gnome-shell/gnome-shell-theme.gresource
echo Restart GNOME Shell by pressing Alt+F2, then type r


#Reparar Pacman db.lck
echo          ------==Script Creado por GerardoHD==------
echo       ---=Reparando Pacman db.lck=---
sudo rm -f /var/lib/pacman/db.lck
sudo pacman-mirrors -g
sudo pacman -Syyuu
sudo sudo pacman -Suu


#Reparar Var Ubuntu
echo          ------==Script Creado por GerardoHD==------
echo       ---=Reparando Var--
sudo fuser -vki  /var/lib/dpkg/lock
sudo rm -f /var/lib/dpkg/lock
sudo dpkg --configure -a
sudo apt autoremove
sudo apt update --fix-missing

#ROOT-A
echo          ------==Script Creado por GerardoHD==------
echo       ---=Clonando Chromium OS ROOT-A=---
#dd if=/dev/sdb3 of=/dev/sda7
sleep 1s
#e2fsck -f -y -v -C 0 /dev/sda7
#resize2fs -p /dev/sda7


#Red-Script
aletorio=`echo $(($RANDOM%6))`
clear
echo
echo "¿Jugamos a un Acertijo?"
echo
echo "Introduce un numero [0-6]"
read entrada
if(($aletorio == $entrada)); then
echo "Sigues vivo"
screenfetch
else
clear
cmatrix
fi


#STATE
echo          ------==Script Creado por GerardoHD==------
echo       ---=Clonando Chromium OS STATE=---
#dd if=/dev/sdb1 of=/dev/sda8
sleep 1s
#e2fsck -f -y -v -C 0 /dev/sda8
#resize2fs -p /dev/sda8
