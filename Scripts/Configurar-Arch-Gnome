#Configurar Arch Linux con Gnome
echo          ------==Script Creado por GerardoHD==------
echo https://github.com/GerardoHD
echo Script creado para Arch Linux
echo Se distribuye con la esperanza de que sea útil, pero sin ninguna garantía
sleep 1s
if [ "$(id -u)" -eq 0 ] ; then
 	echo " ERROR: Makepkg no compilará paquetes desde AUR en una sesión Root "

	echo " Simplemente ejecute este Script desde su usuario Regular. "

	echo " Este Script usará sudo cuando sea necesario. Saliendo."

	exit 1

fi
#
echo Probando conexión a Internet
ping -c 3 www.archlinux.org
sudo mount -o remount,size=2G,noatime /tmp
#
echo       ---=Configurando Pacman=---
sleep 1s
echo Inicializando Pacman
sudo pacman-key --populate archlinux
sudo pacman-key --init
sudo pacman -Syyu
#
echo     ---=Instalando Bases para Arch Linux=---
sleep 1s
sudo pacman -S base-devel cmake wget os-prober yaourt git snapd
sudo pacman -S wireless_tools wpa_supplicant wpa_actiond dialog
#echo Testeando Bocinas
#speaker-test -c 2
sudo pacman -S xorg-server xorg-xinit xorg-utils xorg-server-utils xterm xorg-twm xorg-xclock xterm xorg-apps
sudo pacman -S mesa mesa-demos alsa-utils
echo -=Graficos Intel=-
sudo pacman -S intel-ucode xf86-video-intel
echo -=Graficos AMD=-
sudo pacman -S xf86-video-ati
echo -=Drivers propietarios principales Nvidia=-
sudo pacman -S nvidia nvidia-utils
echo -=Drivers de código abierto Nvidia=-
sudo pacman -S xf86-video-nouveau
#echo Testeando X:
#startx
#
echo     ---=Configurando Touchpad=---
sleep 1s
sudo pacman -S libinput xf86-input-libinput xorg-xinput
echo ¿El Touchpad no funciona en GNOME?
echo gsettings set org.gnome.desktop.peripherals.touchpad send-events enabled
echo Si el Touchpad aun no funciona usar xf86-input-synaptics
#
echo     ---=Instalando Gnome=---
sleep 1s
sudo pacman -S gnome
echo Flags pacman -S gnome-extra:
echo 6 7 10 13 14 16 18 21 22 23 26 28 30 32 35 37 42 43 46 50 52 
sudo pacman -S gnome-extra
#
echo     ---=Instalando Software desde Repositorios Oficiales=---
sleep 1s
sudo pacman -S speedtest-cli cmatrix inxi bash-completion gksu mtools unace ttf-liberation
sudo pacman -S gparted btrfs-progs dosfstools exfat-utils f2fs-tools gpart ttf-roboto
sudo pacman -S libunrar unrar cmus opusfile x264
sudo pacman -S jfsutils mtools nilfs-utils ntfs-3g polkit reiserfsprogs xfsprogs
sudo pacman -S gvfs p7zip lrzip lzip minizip gst-libav atomicparsley eog-plugins
sudo pacman -S gnome-initial-setup gnome-software rhythmbox
sudo pacman -S android-tools geary catfish youtube-dl archlinux-wallpaper arch-wiki-lite
sudo pacman -S nautilus-open-terminal filemanager-actions elinks budgie-desktop
sudo pacman -S gutenprint foomatic-db-gutenprint-ppds cups libcups
sudo pacman -S kodi kodi-addon-adsp-freesurround kodi-addon-audioencoder-flac kodi-addon-audioencoder-lame
sudo pacman -S kodi-addon-audioencoder-vorbis kodi-addon-audioencoder-wav
sudo pacman -S kodi-addon-visualization-spectrum kodi-eventclients p8-platform
sudo pacman -S libreoffice-fresh libreoffice-fresh-es libcdr 
sudo pacman -S avidemux-cli avidemux-qt openssh sshfs
#
echo     ---=Instalando Software desde Arch User Repository=---
sleep 1s
yaourt -S pamac-aur pacli
yaourt -S gnome-backgrounds-bitday-git
yaourt -S rhythmbox-plugin-alternative-toolbar-git nautilus-admin 
yaourt -S gtk-arc-flatabulous-theme-git gtk-theme-united-gnome
yaourt -S flatplat-theme bing-wallpaper-git capitaine-cursors
yaourt -S google-chrome chrome-gnome-shell-git etcher
yaourt -S gnome-mpv kodi-addon-pvr-iptvsimple-git kodi-platform-git libplatform-legacy
yaourt -S kodi-standalone-service
echo -=Soporte Impresora Epson L210=-
yaourt -S epson-inkjet-printer-201207w
#
#yaourt -S la-capitaine-icon-theme-git paper-gtk-theme-git foomatic-db-gutenprint gnome-shell-extension-zorin-menu
#yaourt -S gnome-shell-extension-activities-config gnome-shell-extension-topicons-plus-git gnome-shell-extension-mediaplayer-git
#yaourt -S gnome-shell-extension-coverflow-alt-tab gnome-shell-extension-dash-to-panel gnome-shell-extension-panel-osd-git
#yaourt -S gnome-shell-extension-scroll-workspaces-git gnome-shell-extension-dash-to-dock gnome-shell-extension-lockkeys-git
#yaourt -S gnome-shell-extension-dynamic-top-bar gnome-shell-extension-workspaces-to-dock gnome-shell-extension-pixel-saver
#yaourt -S gnome-shell-extension-openweather-git gnome-shell-extension-pixel-saver paper-icon-theme-git
#yaourt -S pacaur gradio
#curl -s https://gist.githubusercontent.com/Tadly/0e65d30f279a34c33e9b/raw/pacaur_install.sh | bash
#
echo     ---=Descargando Software desde Github=---
#
curl https://raw.githubusercontent.com/badarsh2/Sudocabulary/master/script.sh | bash
#
echo       ---=Actualizando Arch Linux=---
sleep 1s
#!/bin/bash
speedtest
sudo mount -o remount,size=2G,noatime /tmp
#sudo cups-genppdupdate
#sudo pacman -Syyu
yaourt -Syyyua
sudo grub-mkconfig -o /boot/grub/grub.cfg
sudo fc-cache -f -v
sudo gtk-update-icon-cache
echo       ---=Limpiando Arch Linux=--
sleep 1s
echo
#!/bin/bash
sudo pacman-optimize
sudo pacman -Sc
sudo yaourt -Sc
df -h
sleep 3s
#
echo       ---=Activando Servicio Gnome Display Manager "gdm"=---
sudo systemctl enable gdm.service
echo       ---=Activando Servicio Network Manager=---
sudo systemctl enable NetworkManager.service
echo       ---=Activando Servicio Cups "cupsd"=---
sudo systemctl enable org.cups.cupsd.service
echo       ---=Activando SSHD=---
systemctl enable sshd.service
systemctl enable sshd.socket
#
sleep 1s
echo Ejecuta el Script Elegido
ls /usr/local/bin/
sleep 5s
clear
screenfetch
#
